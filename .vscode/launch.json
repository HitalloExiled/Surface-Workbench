{
    "version": "0.2.0",
    "configurations":
    [
        {
            "type":          "node",
            "request":       "launch",
            "name":          "Launch Server",
            "program":       "${workspaceRoot}\\App.Server\\start\\index.js",
            "cwd":           "${workspaceRoot}\\App.Server",
            "preLaunchTask": "surface"
        },
        {
            "type":          "node",
            "request":       "launch",
            "name":          "Launch Build",
            "program":       "${workspaceRoot}\\App.Client\\node_modules\\@surface\\compiler\\index.js",
            //"runtimeArgs":   ["--preserve-symlinks"],
            "cwd":           "${workspaceRoot}\\App.Client",
            "outFiles": []
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Linking",
            "program":  "F:\\Projects\\Surface-Workbench\\tasks\\link",
            "args":     ["r"],
            "cwd":      "${workspaceRoot}\\tasks\\",
            "outFiles": []
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:1337",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch compiler",
            "program":  "${workspaceRoot}\\App.Client\\node_modules\\@surface\\compiler\\tasks\\build",
            //"args":     ["project=./"],
            "cwd":      "${workspaceRoot}\\App.Client",
            "protocol": "inspector"
        }
    ]
}