{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format    
    "version": "0.1.0",
    "tasks":
    [
        {
            "taskName":       "build",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./tasks/build"],
            "showOutput":     "always",
            "isBackground":   false
        },
        {
            "taskName":       "surface",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", ".\\node_modules\\.bin\\surface -t rebuild"],
            "options":
            {
                "cwd": "${workspaceRoot}\\App.Client"
            },
            "showOutput":   "always",
            "isBackground": false
        }
    ]
}