{
  "extends": "../configurations/tsconfig.json",
  "compilerOptions":
  {
    "baseUrl": "./",
    "module":  "es2015",
    "lib":
    [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "rootDirs":
    [
      "../../Surface/source"
    ],
    "sourceMap": true,
    "target":    "es6",
    "typeRoots":
    [
      "../node_modules/@surface/custom-element/@types" /* Just for linking. For packages use "../node_modules/@surface/compiler/@types" */
    ]
  },
  "include": ["./"],
  "exclude": ["../node_modules"]
}