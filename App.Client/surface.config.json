{
    "context":  "./source",
    "entry":    ["./app-root/index.ts"],
    "filename": "[name]/[hash].js",
    "output":   "../App.Server/public",
    "plugins":
    [
        {
            "name": "html-template",
            "options":
            {
                "filename": "[name]/index.html",
                "template": "./template.html"
            }
        },
        {
            "name": "code-splitter",
            "options":
            {
                "entries": ["./views"]
            }
        }
    ]
}