{
    "context":    "./source",
    "entry":      { ".": ["./app-root/index.ts"] },
    "public":     "../App.Server/public",
    "publicPath": "",
    "filename":   "[name]/[hash].js",
    "modules":    ["./node_modules"],
    "plugins":
    [
        {
            "name": "html-template",
            "options":
            {
                "template": "./template.html"
            }
        },
        {
            "name": "code-splitter",
            "options":
            {
                "entries": ["./views"],
                "relativePath": false
            }
        }
    ]
}